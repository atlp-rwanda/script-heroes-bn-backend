  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Users routes"
    },
    {
      "name": "Requests",
      "description": "requests routes"
    },
    {},
    {
      "name": "Profile",
      "description": "profile routes"
    },
